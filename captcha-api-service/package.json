{
  "name": "captcha-api-service",
  "version": "2.0.0",
  "description": "Production-ready CAPTCHA API Service with Survey + ALTCHA integration, multi-tenant SaaS, 5-15M verifications/month optimized",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "worker": "node src/workers/altchaWorker.js",
    "worker:dev": "nodemon src/workers/altchaWorker.js",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand",
    "test:integration": "NODE_ENV=test jest tests/integration --runInBand",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "migrate": "node scripts/migrate.js",
    "migrate:test": "NODE_ENV=test node scripts/migrate-fixed.js",
    "migrate:create": "node scripts/create-migration.js",
    "db:reset": "node scripts/reset-database.js",
    "docker:build": "docker build -t captcha-api-service:latest .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "queue:monitor": "node src/utils/queueMonitor.js",
    "queue:clean": "node scripts/clean-queue.js",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "prestart": "npm run migrate",
    "postinstall": "echo 'Installation complete. Run npm run migrate to set up database.'"
  },
  "dependencies": {
    "bullmq": "^5.1.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/workers/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 10000,
    "verbose": true
  },
  "keywords": [
    "captcha",
    "api",
    "microservice",
    "altcha",
    "survey",
    "bot-detection",
    "security",
    "saas",
    "multi-tenant",
    "rate-limiting",
    "production-ready"
  ],
  "author": "CAPTCHA SaaS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/captcha-api-service"
  },
  "bugs": {
    "url": "https://github.com/your-org/captcha-api-service/issues"
  },
  "homepage": "https://github.com/your-org/captcha-api-service#readme"
}
